<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context="mani.itachi.toasterexample.ToasterActivity">

    <Button
        android:id="@+id/normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Normal toast without icon"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/normal_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Normal toast with icon"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Error"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Info Toast Center"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/succes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Success toast on top"
        android:onClick="onClick"/>

</LinearLayout>
